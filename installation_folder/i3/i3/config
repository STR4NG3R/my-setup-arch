# Set Mode Without any bynding useful for virtual box applications
set $ModeName _
mode "$ModeName" {
    bindsym $mod+Shift+c reload
    bindsym $mod+Shift+r restart
    bindsym $alt+Tab focus right
    bindsym $mod+n exec "~/.config/scripts/change_ws.sh 0"
}

